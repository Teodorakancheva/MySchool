<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background ="@color/colorPink"
    tools:context=".teacher.TeacherUpload">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="20dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorUpload"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:text="UPLOAD HOMEWORK" />

<LinearLayout
    android:id="@+id/linL"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/textView"
    android:orientation="horizontal">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp" />


    <EditText
        android:id="@+id/textGrade"
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_weight="1"
        android:textColorHint="@color/colorUpload"
        android:fontFamily="sans-serif-black"
       android:hint="class"/>

    <Button
        android:id="@+id/btnSelectGrade"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorYelow1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Select"/>

</LinearLayout>
<LinearLayout
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/linL"
    android:layout_marginTop="50dp"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/subject"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linL"
        android:layout_weight="1"
        android:textColorHint="@color/colorUpload"
        android:layout_marginLeft="20dp"
        android:hint="Enter name subject"/>

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:background="@color/colorYelow1"
        android:layout_marginRight="20dp"
        android:layout_below="@id/subject"
        android:text="Upload" />

</LinearLayout>
    <TextView
        android:id="@+id/textsel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/colorUpload"
        android:hint="Select file"
        android:layout_below="@+id/linear"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textsel"
        android:src="@drawable/click" />

</RelativeLayout>