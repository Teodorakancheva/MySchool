<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textFullname"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background ="@color/colorPink"
    tools:context=".teacher.RegisterTeacherActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/viwReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/colorUpload"
        android:fontFamily="sans-serif-black"
        android:text="Registration teacher"/>

    <EditText
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColorHint="@color/colorUpload"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/viwReg"
        android:hint="Full name"
        android:inputType="text"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/fullname"
        android:layout_marginEnd="16dp"
        android:hint="Email"
        android:textColorHint="@color/colorUpload"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/email"
        android:textColorHint="@color/colorUpload"
        android:inputType="textPassword"
        android:hint="Password" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="20dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="20dp"
        android:background="@color/colorYellow"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/password" />


    <TextView
        android:id="@+id/linkLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnRegister"
        android:textSize="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorUpload"
        android:text="Already have an account? Login" />

</RelativeLayout>




