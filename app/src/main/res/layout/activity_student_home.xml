<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background ="@color/colorYellow"
    tools:context="com.example.myschool.student.StudentHomeActivity">


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="20dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorUpload"
        android:textSize="30dp"
        android:text="Home Student" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:layout_marginTop="50dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="12dp"
        android:layout_weight="1"
        android:textColor="@color/colorUpload"
        android:text="name student"/>

    <TextView
        android:id="@+id/grade"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:textSize="12dp"
        android:textColor="@color/colorUpload"
        android:layout_weight="1"
        android:text="class student"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/lin"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/viewFullname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorUpload"
            android:fontFamily="sans-serif-black"
            android:text="Name"/>

        <TextView
            android:id="@+id/viewGrade"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textSize="20dp"
            android:textColor="@color/colorUpload"
            android:fontFamily="sans-serif-black"
            android:text="Class"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lin1"
        android:layout_marginTop="50dp"
        android:background="@color/colorPink"
        android:text="Upload" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnUpload"
        android:layout_marginTop="50dp"
        android:text="Download"
        android:background="@color/colorPink"/>


</RelativeLayout>