<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background ="@color/colorBlue"
    android:orientation="vertical"
    tools:context=".parent.ParentHomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30dp"
        android:text="HOME PARENT"
        android:textColor="@color/colorGray"/>

    <LinearLayout
        android:id="@+id/Lin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:layout_marginTop="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/colorGray"
        android:text="child name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginLeft="180dp"
            android:layout_weight="1"
            android:textColor="@color/colorGray"
            android:fontFamily="sans-serif-black"
            android:text="cild grade" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/Lin"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/pCfullname"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGray"
            android:fontFamily="sans-serif-black"
            android:text="name"/>

        <TextView
            android:id="@+id/pChildGrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="160dp"
            android:layout_weight="1"
            android:textColor="@color/colorGray"
            android:fontFamily="sans-serif-black"
            android:text="class"
            android:layout_below="@+id/fullname"/>

    </LinearLayout>


      <Button
        android:id="@+id/btnSendMessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
        android:text="SEND/GET MESSEGE"
          android:background="@color/colorYY"
        android:layout_below="@+id/lin2"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/btnView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Marks"
        android:layout_below="@+id/btnSendMessage"
        android:layout_centerHorizontal="true"
        android:background="@color/colorYY"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

</RelativeLayout>